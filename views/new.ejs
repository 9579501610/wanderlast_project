<%layout("/layouts/boilerplate.ejs")%> 

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

   <div class="row">
    <div class="col-6 offset-3">
        <form  method="POST" action="/listings" novalidate class="needs-validation">
            <h1>create a new listing data</h1> <br>
           <div  class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" name="Listing[title]" placeholder="title" class="form-control" required>
            <div class="valid-feedback">msg loking goods</div>
           
           </div>
    
            <div  class="mb-3">
                <label for="description" class="form-lable">description</label>
            <input type="text" name="Listing[description]" placeholder="description" class="form-control" required>
            <div class="invalid-feedback">wrong msg</div>
            </div>
    
            <div  class="mb-3">
                <label for="image" class="form-lable">image</label>
                <input type="text" name="Listing[image]" placeholder="image/url" class="form-control">
           </div>
        
    
          <div class="row">
            <div  class="mb-3 col-md-4">
            <label for="price" class="form-lable" >price</label>
            <input type="number" name="Listing[price]" placeholder="price" class="form-control" required>
            <div class="invalid-feedback">wrong msg</div>
           </div>
           
           <div  class="mb-3 col-md-8">
            <label for="country" class="form-lable">country</label >
            <input type="text" name="Listing[country]" placeholder="country" class="form-control" required>
             <div class="invalid-feedback">wrong msg</div>
           </div>
     
          </div>
    
            <div  class="mb-3">
            <label for="location" class="form-lable">location</label>
            <input type="text"  name="Listing[location]" placeholder="location" class="form-control" required>
            <div class="invalid-feedback">wrong msg</div>
            </div>
    
    
            <button class="btn btn-dark add-btn">Add</button>
         <script src="/js/Script.js"></script>
        </form>
   