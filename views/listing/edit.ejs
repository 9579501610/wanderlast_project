<%layout("/layouts/boilerplate.ejs")%> 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

   <form   method="POST" action="/listing/<%=listings._id%>?_method=PUT" novalidate class="needs-validation">
    <div class="row mt-3">
        <div class="col col-6 offset-2 ">
            
    <div  class="mb-3">
        <label for="title" class="lable">Title:</label>
        <input type="text" id="title"class="form-control" name="Listing[title]" value="<%= listings.title %>" required>
        </div>
    
    
        <div  class="mb-3">
        <label class="lable" for="description">Description:</label>
        <textarea id="description" name="Listing[description]" rows="4" cols="50"class="form-control"><%= listings.description %></textarea>
        </div>
    
        <div  class="mb-3">
        <label for="image" class="lable">Image URL:</label>
        <input type="text" id="image" class="form-control" name="Listing[image]" value="<%= listings.image %>" required>
        </div>
    
      <div class="row">
        <div  class="mb-3 col-md-4">
            <label for="price" class="lable">Price:</label>
            <input type="number" id="price" name="Listing[price]" class="form-control" value="<%= listings.price %>" required>
           </div>
        
            <div  class="mb-3 col-md-8">
            <label for="country" class="lable">Country:</label>
            <input type="text" id="country" class="form-control" name="Listing[country]" value="<%= listings.country %>" required>
           </div>
      </div>
        
        <div  class="mb-3">
        <label for="location" class="lable">Location:</label>
        <input type="text" id="location"class="form-control" name="Listing[location]" value="<%= listings.location %>" required>
        </div>
        <button type="submit" class="edit-btn">Edit</button>
       </form>
    
        </div>
    </div>