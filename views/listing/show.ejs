
<%layout("/layouts/boilerplate.ejs")%> 

<div class="row mt-3">
<div class="col-8 offset-2">
    <div class="col-8 offset-2">
        <h3>Lisitng details:</h3>
    </div>
       

<div class="col-6 offset-2">
    
    <div class="card" style="width: 30rem;">
        <img src="<%=listings.image.url%>" class="card-img-top show-image" alt="listing_image">
        <div class="card-body">
          <h5 class="card-title"> <%=listings.title%></h5>
          <p class="card-text">
           <h6>  <%=listings.description%></h6> 
           <h6> <%=listings. price%></h6>  
           <h6> <%=listings. location%></h6>  
           <h6> <%=listings.country%></h6> 
         </p>
        </div>
      </div>
</div>
    </div>
</div>
<div class="btns">
    
    <a href="/listing/<%= listings._id%>/Edit"
   class=" btn btn-dark col-1 offset-3 edit-btn">
   Edit
    </a>
   
    <form method="post" action="/list/<%= listings._id%>?_method=DELETE" >
    <button class="btn btn-dark offset-3">delete</button>
    </form>
   
    

</div>